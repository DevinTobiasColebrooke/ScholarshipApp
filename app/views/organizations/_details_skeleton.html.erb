<div class="animate-pulse space-y-8 mt-8 border-t pt-8">

  <%# Program Services Header %>
  <div class="h-6 bg-gray-200 rounded w-64 mb-4"></div>

  <% 3.times do %>
    <div class="p-5 border border-gray-200 bg-white rounded-lg shadow-sm">
      <div class="h-4 bg-gray-300 rounded w-1/3 mb-3"></div>
      <div class="space-y-2">
        <div class="h-3 bg-gray-200 rounded w-full"></div>
        <div class="h-3 bg-gray-200 rounded w-11/12"></div>
      </div>
      <div class="flex flex-wrap gap-x-6 text-xs mt-4">
        <div class="h-3 bg-gray-200 rounded w-20"></div>
        <div class="h-3 bg-gray-200 rounded w-20"></div>
        <div class="h-3 bg-gray-200 rounded w-20"></div>
      </div>
    </div>
  <% end %>

  <%# Grants Header %>
  <div class="h-6 bg-gray-200 rounded w-5/6 mt-10 mb-4"></div>

  <%# Grant Cards %>
  <% 5.times do %>
    <div class="p-4 bg-gray-50 border border-gray-200 rounded-lg">
      <div class="flex justify-between items-center mb-2">
        <div class="h-5 bg-gray-300 rounded w-24"></div>
        <div class="h-4 bg-gray-300 rounded w-1/4"></div>
      </div>
      <div class="h-3 bg-gray-200 rounded w-4/5 mb-1"></div>
      <div class="h-3 bg-gray-200 rounded w-3/4"></div>
    </div>
  <% end %>

</div>