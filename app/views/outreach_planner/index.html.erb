<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Start a New Outreach Campaign</h1>

  <%= form_with url: outreach_planner_index_path, method: :post, local: true, class: "bg-white shadow-md rounded-lg p-6" do |form| %>
    <div class="mb-4">
      <%= form.label :campaign_name, "Campaign Name", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.text_field :campaign_name,
                           placeholder: "e.g., Ivy League Round 1, Local Foundations Q4",
                           class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      <p class="text-gray-600 text-xs italic mt-1">Give your campaign a memorable name.</p>
    </div>

    <div class="mb-6">
      <%= form.label :profile_scope_name, "Select Target Profile", class: "block text-gray-700 text-sm font-bold mb-2" %>
      <%= form.select :profile_scope_name,
                       options_for_select(@profile_presets.map { |k, v| [v, k] }),
                       { prompt: "Choose a profile..." },
                       class: "block appearance-none w-full bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline" %>
      <p class="text-gray-600 text-xs italic mt-1">This defines the criteria for organizations in this campaign.</p>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Next: Review Campaign", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline cursor-pointer" %>
    </div>
  <% end %>
</div>
